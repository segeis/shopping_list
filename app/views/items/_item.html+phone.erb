<tr 
data-link="<%= purchase_item_path(item) %>",  
class="<%= "purchased" if item.purchased? %>">
	<td><%= item.name %> (<%= item.quantity %>)</td>
	<td><%=l item.created_at, format: :short %> by <%= item.user.username %></td>
	<td><%= link_to '', edit_item_path(item.id), :class => 'fa fa-pencil' %></td>
</tr>

