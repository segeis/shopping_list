<%= form_for(Item.new, remote: true) do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :name, :class => 'control-label col-md-2' %>
      <%= f.text_field :name, :class => 'text-field form-control' %>
      <%= f.label :quantity, :class => 'control-label col-md-2' %> 
      <%= f.number_field :quantity, :class => 'text-field form-control' %>
    </div>
    <div class='actions'>
        <%= f.submit :class => 'btn btn-primary'%>
    </div>
  </div>
<% end %> 