<% if @item.new_record? %>
	$('input#item_name, input#item_quantity').effect('highlight', { color: 'red' });
<% else %>
	$('tbody#items').prepend("<%= escape_javascript(render @item) %>");
	$('tbody tr').first().effect('highlight');
	$('input#item_name').val('');
	$('input#item_quantity').val('1');
<% end %> 